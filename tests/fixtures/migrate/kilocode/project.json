{
  "mcpServers": {
    "terraform": {
      "command": "uvx",
      "args": ["mcp-server-terraform"],
      "env": {
        "TF_STATE_PATH": "/workspace/terraform.tfstate"
      },
      "alwaysAllow": ["terraform_plan", "terraform_apply"],
      "disabled": false
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "./data"],
      "disabled": false
    }
  }
}
